{
    "name": "context",
    "version": "1.0.0",
    "type": "commonjs",
    "main": "coi-serviceworker.js",
    "scripts": {
        "test": "playwright test",
        "test:ui": "playwright test --ui",
        "test:record": "playwright codegen --ignore-https-errors https://localhost:8000",
        "test:debug": "playwright test --debug",
        "test:headed": "playwright test --headed",
        "test:report": "playwright show-report",
        "test:update-snapshots": "playwright test --update-snapshots",
        "test:jest": "jest --verbose tests/",
        "format": "prettier --write .",
        "prepare": "husky",
        "tokens": "node scripts/generate-css-tokens.js",
        "dev": "npm run tokens && webpack serve",
        "build": "npm run tokens && webpack",
        "serve": "npm run tokens && webpack serve --mode development",
        "serve:ci": "npx http-server build -p 9000"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@playwright/test": "^1.57.0",
        "@types/bezier-js": "^4.1.3",
        "babel-jest": "^30.2.0",
        "babel-loader": "^10.0.0",
        "chokidar": "^5.0.0",
        "copy-webpack-plugin": "^13.0.1",
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.5",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^15.2.11",
        "prettier": "^3.7.4",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "unused-webpack-plugin": "^2.4.0",
        "webpack": "^5.103.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "lint-staged": {
        "*.{js,json,css,md,html,ts}": "prettier --write"
    },
    "dependencies": {
        "bezier-js": "^6.1.4",
        "bidi-js": "^1.0.3",
        "idb-keyval": "^6.2.2",
        "memfs": "^4.51.1",
        "opfs-worker": "^1.3.1",
        "tippy.js": "^6.3.7",
        "tslib": "^2.8.1"
    }
}
